    \begin{lstlisting}[language=Python]
import sympy as sp
a = sp.symbols('a')
A = sp.Matrix([
    [1, a, 0],
    [0, 1, a],
    [a, 0, 1]
])
# Solve det(A) = 0 for exact solution
solutions = sp.solve(A.det(), a)
print("Value(s) of a for infinite solutions:", solutions)
